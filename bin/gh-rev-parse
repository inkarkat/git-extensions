#!/bin/bash

printUsage()
{
    cat <<HELPTEXT
Print the full commit hash of the passed ref.
HELPTEXT
    echo
    printf 'Usage: %q %s\n' "$(basename "$1")" '[--repo|-R OWNER/REPO] REF [-?|-h|--help]'
}

while [ $# -ne 0 ]
do
    case "$1" in
	--help|-h|-\?)	shift; printUsage "$0"; exit 0;;
	--no-color|--color=*)
			shift;;
	--color)	shift; shift;;
	--repo|-R)	shift; export GH_REPO="${1:?}"; shift;;
	--)		shift; break;;
	-*)		{ echo "ERROR: Unknown option \"$1\"!"; echo; printUsage "$0"; } >&2; exit 2;;
	*)		break;;
    esac
done
if [ $# -ne 1 ]; then
    printUsage "$0" >&2
    exit 2
fi
ref="${1:?}"; shift

exec gh api "/repos/{owner}/{repo}/commits/$ref" --jq .sha
