#!/bin/bash

printUsage()
{
    cat <<HELPTEXT
Interactively select (from files touched in <commit> / HEAD) files (or directly
pass N, M, ... selections) to be reverted to what the content *before* <commit>
was.
HELPTEXT
    printf 'Usage: %q %s\n' "$(basename "$1")" "[--accept-single|--single-only] [--filter ''|FILTER] <commit> [N [M ...]] [--] [FILE ...] [-?|-h|--help]"
}
typeset -a selectedCommandArgs=()
while [ $# -ne 0 ]
do
    case "$1" in
	--help|-h|-\?)	shift; printUsage "$0"; exit 0;;
	--no-color|--color=*)
			shift;;
	--color)	shift; shift;;

	--accept-single|--single-only)
			selectedCommandArgs+=("$1"); shift;;
	--filter)	selectedCommandArgs+=("$1" "$2"); shift; shift;;
	*)		break;;
    esac
done

if [ ! "$GIT_CHECKOUTPREVIOUS_COMMIT" ]; then
    if [ "$1" = '--' ]; then
	shift
    elif GIT_CHECKOUTPREVIOUS_COMMIT="$(git-commitid --no-error "$1")"; then
	shift
	[ "$1" = '--' ] && shift
    fi
    [ "$GIT_CHECKOUTPREVIOUS_COMMIT" ] || GIT_CHECKOUTPREVIOUS_COMMIT=HEAD
fi
export GIT_CHECKOUTPREVIOUS_COMMIT
export GIT_SELECTED_COMMAND_DEFAULT_FILES="git-showfiles $GIT_CHECKOUTPREVIOUS_COMMIT --"
exec git-selected-command "${selectedCommandArgs[@]}" 'root checkoutprevious' "$@"
