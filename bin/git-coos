#!/bin/bash

printUsage()
{
    cat <<HELPTEXT
Interactively select (from conflicted files or passed list of files) files (or
directly pass N, M, ... selections) and keep "ours", the original one we had
(ORIG_HEAD), or the one we're rebasing onto.
HELPTEXT
    printf 'Usage: %q %s\n' "$(basename "$1")" '[N [M ...]] [--] [FILE ...] [-?|-h|--help]'
}
case "$1" in
    --help|-h|-\?)	shift; printUsage "$0"; exit 0;;
    --no-color|--color=*)
			shift;;
    --color)		shift; shift;;
esac

GIT_SELECTED_COMMAND_DEFAULT_FILES='git-conflicts --' exec git-selected-command coo "$@"
