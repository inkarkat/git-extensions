#!/bin/bash
set -o pipefail

printUsage()
{
    cat <<HELPTEXT
Collect statistics about my contributions to the current / iterated by
GIT-ITERATOR-COMMAND Git repositories:
- Number of commits of me vs. others
- Changed files / additions / deletions of me vs. others
- My most commits by task ID
- My most frequent commit areas
- [GitHub] Number of issues of me vs. others per state
- [GitHub] Number of pull requests of me vs. others per state
HELPTEXT
    echo
    printf 'Usage: %q %s\n' "$(basename "$1")" '[GIT-ITERATOR-COMMAND ...] [-?|-h|--help]'
}

typeset -a logArgs=()
typeset -a colorArg=(--color=always)
typeset -a pager=("${PAGER:-less}" --RAW-CONTROL-CHARS)
if [ ! -t 1 ]; then
    colorArg=()
    pager=()
fi
while [ $# -ne 0 ]
do
    case "$1" in
	--help|-h|-\?)	shift; printUsage "$0"; exit 0;;
	--color=auto)	shift;;
	--no-color|--color=*)
			colorArg=("$1"); shift;;
	--color)	[ "$2" = auto ] || colorArg=("$1" "$2"); shift; shift;;
	--)		logArgs+=("$1"); shift; break;;
	*)		logArgs+=("$1"); shift;;
    esac
done

[ "$HUB" ] \
    && identifyCommand=userrepo \
    || identifyCommand=wcname

collectStats()
{
    git-wrapper "$@" "$identifyCommand" | joinBy --prefix "Git${HUB:+[Hub]} statistics for " --summarize-larger '7 repositories' - ', '

    myTotalCommits=$(git-wrapper "$@" countmine | sumField 1) || return $?

    header "${colorArg[@]}" 'Commits by author'
    git-wrapper "$@" whodid --csv \
	| sumField -F , --group-by 2 --sort-by -result --result-first --output-separator $'\t' 1 \
	| truncateLongTail -F $'\t' 1

    header "${colorArg[@]}" 'Changed files / additions / deletions by author'
    git-wrapper "$@" logstabyeach --csv \
	| sumField -F , --group-by 1 --sort-by -result --result-first --output-separator $'\t' 2 3 4 \
	| truncateLongTail -F $'\t' 1

    git-wrapper "$@" lmine \
	| git committaskidtally --against-total-commits ${myTotalCommits:-} \
	| truncateLongTail -F $'\t' 1 \
	| withHeader "${colorArg[@]}" 'My most commits by task ID'

    header "${colorArg[@]}" 'My most frequent commit areas'
    git-wrapper "$@" lomine \
	| git commitkeywordtally --against-total-commits ${myTotalCommits:-} \
	| truncateLongTail -F $'\t' 1

    if [ "$HUB" ]; then
	header "${colorArg[@]}" 'Issues by author'
	hub issue --state all --format $'%au\t%S%n' \
	    | aggregateField -F $'\t' --total-and-unique-counts --result-first --group-by 1 --sort-by -result 2 \
	    | truncateLongTail -F $'\t' 1

	header "${colorArg[@]}" 'Pull requests by author'
	hub pr list --state all --format $'%au\t%pS%n' \
	    | aggregateField -F $'\t' --total-and-unique-counts --result-first --group-by 1 --sort-by -result 2 \
	    | truncateLongTail -F $'\t' 1
    fi
}

eval 'collectStats "${logArgs[@]}" "$@"' \
    "${pager:+|}" '"${pager[@]}"'
