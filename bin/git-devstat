#!/bin/bash
set -o pipefail

printUsage()
{
    cat <<HELPTEXT
Collect statistics about my contributions to the current / iterated by
GIT-ITERATOR-COMMAND Git repositories:
- Number of commits of me vs. others
- Changed files / additions / deletions of me vs. others
- My most commits by task ID
- My most frequent commit areas
- [GitHub] Number of authored issues / pull requests per state
HELPTEXT
    echo
    printf 'Usage: %q %s\n' "$(basename "$1")" '[GIT-ITERATOR-COMMAND ...] [-?|-h|--help]'
}

typeset -a logArgs=()
typeset -a colorArg=(--color=always)
typeset -a pager=("${PAGER:-less}" --RAW-CONTROL-CHARS)
if [ ! -t 1 ]; then
    colorArg=()
    pager=()
fi
while [ $# -ne 0 ]
do
    case "$1" in
	--help|-h|-\?)	shift; printUsage "$0"; exit 0;;
	--color=auto)	shift;;
	--no-color|--color=*)
			colorArg=("$1"); shift;;
	--color)	[ "$2" = auto ] || colorArg=("$1" "$2"); shift; shift;;
	--)		logArgs+=("$1"); shift; break;;
	*)		logArgs+=("$1"); shift;;
    esac
done

[ "$HUB" ] \
    && identifyCommand=userrepo \
    || identifyCommand=wcname

collectStats()
{
    git-wrapper "$@" "$identifyCommand" | joinBy --prefix 'Git statistics for ' --summarize-larger '7 repositories' - ', '

    header "${colorArg[@]}" 'Commits by author'
    git-wrapper "$@" whodid --csv | sumField -F , --group-by 2 --sort-by -result --result-first --output-separator $'\t' 1

    header "${colorArg[@]}" 'Changed files / additions / deletions by author'
    git-wrapper "$@" logstabyeach --csv | sumField -F , --group-by 1 --sort-by -result --result-first --output-separator $'\t' 2 3 4

    git-wrapper "$@" lmine | git committaskidtally | withHeader "${colorArg[@]}" 'My most commits by task ID'

    header "${colorArg[@]}" 'My most frequent commit areas'
    git-wrapper "$@" lomine | git commitkeywordtally

    if [ "$HUB" ]; then
	header "${colorArg[@]}" 'Pull requests from me'
	hub-wrapper "$@" prsfromme --state all | wcl
    fi
}

eval 'collectStats "${logArgs[@]}" "$@"' \
    "${pager:+|}" '"${pager[@]}"'
