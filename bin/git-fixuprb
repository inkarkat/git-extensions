#!/bin/bash

printUsage()
{
    cat <<HELPTEXT
Commit and squash with the passed revision via interactive rebase.
HELPTEXT
    printf 'Usage: %q %s\n' "$(basename "$1")" '[--amend|--reword] [<commit-arguments> ...] <ref>|:/<pattern> [--] [<path> ...] [-?|-h|--help]'
}
case "$1" in
    --help|-h|-\?)	shift; printUsage "$0"; exit 0;;
    --no-color|--color=*)
			shift;;
    --color)		shift; shift;;
esac
exec git-fixup --rebase "$@"
