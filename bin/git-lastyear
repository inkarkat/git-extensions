#!/bin/bash

readonly scopeCommand='lastyear-command'
readonly scopeWhat="over the entire fully passed last
[M] year[s] / previous N'th year[s] / year YEAR [and M previous]"
readonly scopeArgs='[(-o|--offset N|--year YEAR) [-n|--years M]]'

readonly scriptDir="$([ "${BASH_SOURCE[0]}" ] && dirname -- "${BASH_SOURCE[0]}" || exit 3)"
[ -d "$scriptDir" ] || { echo >&2 'ERROR: Cannot determine script directory!'; exit 3; }
readonly projectDir="${scriptDir}/.."
readonly libDir="${projectDir}/lib/br-variants"

source "${libDir}/lasttimespan.sh"
