#!/bin/bash

printUsage()
{
    cat <<HELPTEXT
Show the most recent tag (only one if a commit has multiple tags) [starting from
<commit>].
HELPTEXT
    echo
    printf 'Usage: %q %s\n' "$(basename "$1")" '[--annotated-only] [--] [<commit>] [-?|-h|--help]'
}

typeset -a describeAnnotatedOnlyArgs=(--tags)
while [ $# -ne 0 ]
do
    case "$1" in
	--help|-h|-\?)	shift; printUsage "$0"; exit 0;;
	--no-color|--color=*)
			shift;;
	--color)	shift; shift;;
	--annotated-only)
			shift; describeAnnotatedOnlyArgs=();;
	--)		shift; break;;
	-*)		{ echo "ERROR: Unknown option \"$1\"!"; echo; printUsage "$0"; } >&2; exit 2;;
	*)		break;;
    esac
done
hasRef=
case $# in
    0)	ref='HEAD';;
    1)	ref="${1:-HEAD}"; shift; hasRef=t;;
    *)	printUsage "$0" >&2
	exit 2
	;;
esac

tag="$(git describe "${describeAnnotatedOnlyArgs[@]}" --abbrev=0 "$ref")" || exit $?
if git-equals "$tag" "$ref" \
    && [ "$hasRef" ] && git-istag -- "$ref"
then
    tag="$(git describe "${describeAnnotatedOnlyArgs[@]}" --abbrev=0 "${ref}^")" || exit $?
fi
printf '%s\n' "$tag"
