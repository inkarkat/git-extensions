#!/bin/bash

printUsage()
{
    cat <<HELPTEXT
Show commit log of the first commit [in the passed range].
HELPTEXT
    echo
    printf 'Usage: %q %s\n' "$(basename "$1")" '[<log-args> ...] [--] [<path> ...] [-?|-h|--help]'
}

case "$1" in
    --help|-h|-\?)	shift; printUsage "$0"; exit 0;;
esac

ref="$(git-firstcommit "$@")" || exit $?
exec git show --no-patch "$ref"
