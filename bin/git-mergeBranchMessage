#!/bin/bash

printUsage()
{
    cat <<HELPTEXT
Create the "Merge branch BRANCH [into TARGET-BRANCH]" merge message.
HELPTEXT
    echo
    printf 'Usage: %q %s\n' "$(basename "$1")" 'TARGET-BRANCH BRANCH [...] [-?|-h|--help]'
}
case "$1" in
    --help|-h|-\?)	shift; printUsage "$0"; exit 0;;
    --no-color|--color=*)
			shift;;
    --color)		shift; shift;;
esac
if [ $# -lt 2 ]; then
    printUsage "$0" >&2
    exit 2
fi
targetBranch="${1:?}"; shift

branchesPlural=es; [ $# -eq 1 ] && branchesPlural=
branchMergeMessage="$(joinBy --prefix "Merge branch$branchesPlural '" --suffix "'" --last-separator "' and '" "', '" "$@" 2>/dev/null)"
[ "$(git-mbr)" = "$targetBranch" ] || branchMergeMessage+=" into $targetBranch"

printf '%s\n' "$branchMergeMessage"
