#!/bin/bash
set -o pipefail

printUsage()
{
    cat <<HELPTEXT
List all branches in ${remote:-REMOTE / all remotes} [matching <branch-glob>].
HELPTEXT
    echo
    printf 'Usage: %q %s\n' "$(basename "$1")" "${remote:-REMOTE|''} [-n|--newer|-o|--older|-lt|-le|-eq|-ne|-ge|-gt AGE[SUFFIX]] [--] [<branch-glob> ...] [-?|-h|--help]"
}
case "$1" in
    --help|-h|-\?)	shift; printUsage "$0"; exit 0;;
    --no-color|--color=*)
			shift;;
    --color)		shift; shift;;
esac

if [ $# -eq 0 ]; then
    echo >&2 'ERROR: Must pass REMOTE.'
    exit 2
fi
remote="$1"; shift

typeset -a sortArgs=()
postProcessingAction=
while [ $# -ne 0 ]
do
    case "$1" in
	--help|-h|-\?)	shift; printUsage "$0"; exit 0;;
	--no-color|--color=*)
			shift;;
	--color)	shift; shift;;
	--sort)		sortArgs+=("$1" "$2"); shift; shift;;
	--sort=*)	sortArgs+=("$1"); shift;;
	-n|--newer|-o|--older|-lt|-le|-eq|-ne|-ge|-gt)
			printf -v postProcessingAction 'augmentLines --prepend -- git log --max-count 1 --pretty=tformat:%%ct | filterAge --field-separator %q %q %q' $'\t' "$1" "$2"
			shift; shift;;
	--)		shift; break;;
	-*)		{ echo "ERROR: Unknown option \"$1\"!"; echo; printUsage "$0"; } >&2; exit 2;;
	*)		break;;
    esac
done
[ $# -gt 0 ] || set -- '*'

remoteBranchQuery()
{
    git branch "${sortArgs[@]}" --remotes --list "${@/#/${remote}${remote:+/}}" \
	| sed -e "/^ *${remote:-[^/]\\+}\/HEAD -> /d" -e 's/^[[:space:]]\+//'
}
eval 'remoteBranchQuery "$@"' "${postProcessingAction:+|}$postProcessingAction"
