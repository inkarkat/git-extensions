#!/bin/bash
set -o pipefail

printUsage()
{
    cat <<HELPTEXT
List all branches in ${remote:-REMOTE / all remotes} [matching <glob>].
HELPTEXT
    echo
    printf 'Usage: %q %s\n' "$(basename "$1")" "${remote:-REMOTE|''} [<glob> ...] [-?|-h|--help]"
}
case "$1" in
    --help|-h|-\?)	shift; printUsage "$0"; exit 0;;
    --no-color|--color=*)
			shift;;
    --color)		shift; shift;;
esac

if [ $# -eq 0 ]; then
    echo >&2 'ERROR: Must pass REMOTE.'
    exit 2
fi
remote="$1"; shift

while [ $# -ne 0 ]
do
    case "$1" in
	--help|-h|-\?)	shift; printUsage "$0"; exit 0;;
	--no-color|--color=*)
			shift;;
	--color)	shift; shift;;
	--)		shift; break;;
	-*)		{ echo "ERROR: Unknown option \"$1\"!"; echo; printUsage "$0"; } >&2; exit 2;;
	*)		break;;
    esac
done
[ $# -gt 0 ] || set -- '*'

git branch --remotes --list "${@/#/${remote}${remote:+/}}" | \
    sed -e "/^ *${remote}\/HEAD -> /d" -e 's/^[[:space:]]\+//'
