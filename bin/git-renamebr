#!/bin/bash

printUsage()
{
    cat <<HELPTEXT
Rename the current branch / <oldbranch> to <newbranch>.
HELPTEXT
    echo
    printf 'Usage: %q %s\n' "$(basename "$1")" "[--] [<oldbranch>] <newbranch> [-?|-h|--help]"
}
case "$1" in
    --help|-h|-\?)	shift; printUsage "$0"; exit 0;;
    --no-color|--color=*)
			shift;;
    --color)		shift; shift;;
    --)			shift;;
esac
if [ $# -eq 0 -o $# -gt 2 ]; then
    echo >&2 'Need <newbranch> target!'
    exit 2
elif [ $# -eq 1 ]; then
    oldBranch="$(git-brname --real-branch-only)" || exit $?
    newBranch="$1"
else
    oldBranch="$1"
    newBranch="$2"
fi
exec git branch -m "$oldBranch" "$newBranch"
