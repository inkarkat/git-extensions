#!/bin/bash

printUsage()
{
    cat <<HELPTEXT
Set my user's email address for the current repository.
HELPTEXT
    echo
    printf 'Usage: %q %s\n' "$(basename "$1")" 'USER@HOST [-?|-h|--help]'
}
case "$1" in
    --help|-h|-\?)	shift; printUsage "$0"; exit 0;;
    --no-color|--color=*)
			shift;;
    --color)		shift; shift;;
esac
if [ $# -ne 1 ]; then
    printUsage "$0" >&2
    exit 2
fi
newEmail="${1:?}"; shift

username="$(git config --get user.name)"
exec git-verboselocalconfig set --name "email for ${username:-UNDEFINED}" user.email "$newEmail"
