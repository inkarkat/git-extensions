#!/bin/bash

printUsage()
{
    cat <<HELPTEXT
Log together with side-by-side diff of the complete files for a particular
commit.
HELPTEXT
    echo
    printf 'Usage: %q %s\n' "$(basename "$1")" '[options] <object> <object> [...] [-?|-h|--help]'
}
case "$1" in
    --help|-h|-\?)	shift; printUsage "$0"; exit 0;;
esac

showy()
{
    git show --no-patch "$@" && git dpY "$@"
}

typeset -a pager=("${PAGER:-less}" --RAW-CONTROL-CHARS)
if [ -t 1 ]; then
    isColorOffArgument "$@" || set -- '--color=always' "$@"
else
    pager=()
fi

eval 'showy "$@"' "${pager:+|}" '"${pager[@]}"'
