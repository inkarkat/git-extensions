#!/bin/bash

printUsage()
{
    cat <<HELPTEXT
Force application of stash to dirty working copy when "stash pop" complains.
HELPTEXT
    echo
    printf 'Usage: %q %s\n' "$(basename "$1")" '[-?|-h|--help]'
}
case "$1" in
    --help|-h|-\?)	shift; printUsage "$0"; exit 0;;
    --no-color|--color=*)
			shift;;
    --color)		shift; shift;;
esac

git stash show --patch "$@" | git apply --index --3way && git stash drop "$@"
