#!/bin/bash

printUsage()
{
    cat <<HELPTEXT
Show a list of commit IDs recorded in the superproject, for all submodules.
HELPTEXT
    echo
    printf 'Usage: %q %s\n' "$(basename "$1")" '[--recursive] [-?|-h|--help]'
}

typeset -a recursiveArg=()
while [ $# -ne 0 ]
do
    case "$1" in
	--help|-h|-\?)	shift; printUsage "$0"; exit 0;;
	--no-color|--color=*)
			shift;;
	--color)	shift; shift;;

	--recursive)	recursiveArg=("$1"); shift;;
	--)		shift; break;;
	-*)		{ echo "ERROR: Unknown option \"$1\"!"; echo; printUsage "$0"; } >&2; exit 2;;
	*)		break;;
    esac
done
if [ $# -ne 0 ]; then
    printUsage "$0" >&2
    exit 2
fi

exec git submodule foreach "${recursiveArg[@]}" --quiet 'echo $sha1 $sm_path'
