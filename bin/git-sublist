#!/bin/bash

printUsage()
{
    cat <<HELPTEXT
Show a list of all (initialized and at least once updated) submodules.
HELPTEXT
    echo
    printf 'Usage: %q %s\n' "$(basename "$1")" '[-?|-h|--help]'
}
case "$1" in
    --help|-h|-\?)	shift; printUsage "$0"; exit 0;;
    --no-color|--color=*)
			shift;;
    --color)		shift; shift;;
esac
if [ $# -ne 0 ]; then
    printUsage "$0" >&2
    exit 2
fi

exec git submodule foreach --quiet 'echo $sm_path'
