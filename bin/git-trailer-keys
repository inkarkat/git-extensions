#!/bin/bash

printUsage()
{
    cat <<HELPTEXT
List all commit trailer keys defined in the Git configuration.
HELPTEXT
    echo
    printf 'Usage: %q %s\n' "$(basename "$1")" '[--system|--global|--local|--worktree|--file <filename> [--includes]] [-?|-h|--help]'
}

case "$1" in
    --help|-h|-\?)	shift; printUsage "$0"; exit 0;;
esac

exec git config get --all --regexp '^trailer\..*\.key$' "$@"
