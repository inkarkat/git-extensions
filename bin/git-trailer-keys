#!/bin/bash

printUsage()
{
    cat <<HELPTEXT
List all commit trailer keys defined in the Git configuration.
HELPTEXT
    echo
    printf 'Usage: %q %s\n' "$(basename "$1")" '[--as-regexp] [--system|--global|--local|--worktree|--file <filename> [--includes]] [-?|-h|--help]'
}

action=getTrailerKeys
typeset -a configArgs=()
while [ $# -ne 0 ]
do
    case "$1" in
	--help|-h|-\?)	shift; printUsage "$0"; exit 0;;
	--as-regexp)	shift; action=trailerKeysAsRegexp;;
	--)		configArgs+=("$1"); shift; break;;
	*)		configArgs+=("$1"); shift;;
    esac
done

getTrailerKeys()
{
    git config get --all --regexp '^trailer\..*\.key$' "${configArgs[@]}" "$@"
}

trailerKeysAsRegexp()
{
    trailerExpr="$(getTrailerKeys "$@" | joinBy - '\|')" \
	&& [ -n "$trailerExpr" ] \
	&& printf '%s\n' "^\\(${trailerExpr}\\):"
}

$action "$@"
