#!/bin/bash

typeset -ra scopeCommand=(annotateddiffrange-command --to-latest)
readonly scopeWhat='a revision range from HEAD up to (excluding) the first commit affected by
lines that have been changed in currently modified but not staged files'

typeset -ra scopeCommandLastArgs=(--except-last)
readonly scopeArgs=''
readonly scopeInoutNote='does not make sense because the second revision always is an ancestor of the first.'

readonly scriptDir="$([ "${BASH_SOURCE[0]}" ] && dirname -- "${BASH_SOURCE[0]}" || exit 3)"
[ -d "$scriptDir" ] || { echo >&2 'ERROR: Cannot determine script directory!'; exit 3; }
readonly projectDir="${scriptDir}/.."
readonly libDir="${projectDir}/lib/br-variants"

source "${libDir}/custom-range.sh"
