#!/bin/bash

printUsage()
{
    cat <<HELPTEXT
Completely remove the last / N commit(s), also from working copy and index.
Ensures that the current branch isn't dirty.
HELPTEXT
    echo
    printf 'Usage: %q %s\n' "$(basename "$1")" '[-n N|--count N] [-?|-h|--help]'
}
case "$1" in
    --help|-h|-\?)	shift; printUsage "$0"; exit 0;;
    --no-color|--color=*)
			shift;;
    --color)		shift; shift;;
esac

exec git-previouscommitnumber-command autostash git wipe "$@"
