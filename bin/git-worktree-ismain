#!/bin/bash

printUsage()
{
    cat <<HELPTEXT
Test whether the current working copy is the main (first) worktree of the
repository.
HELPTEXT
    echo
    printf 'Usage: %q %s\n' "$(basename "$1")" '[-?|-h|--help]'
}
case "$1" in
    --help|-h|-\?)	shift; printUsage "$0"; exit 0;;
    --no-color|--color=*)
			shift;;
    --color)		shift; shift;;
esac

mainWorktree=
while IFS=' ' read -r key mainWorktree
do
    [ "$key" = 'worktree' ] && break

done < <(git worktree list --porcelain)

if [ -z "$mainWorktree" ]; then
    echo >&2 'ERROR: Could not determine main worktree'
    exit 3
fi

# The worktree normally points at the working copy root, but for submodules it
# points at the Git dir; so we need to check both.

root="$(git root)" || exit $?
[ "$root" = "$mainWorktree" ] && exit 0

gitDir="$(git rev-parse --absolute-git-dir 2>/dev/null)" || exit $?
[ "$gitDir" = "$mainWorktree" ] && exit 0

exit 1
