#!/bin/bash

printUsage()
{
    cat <<HELPTEXT
Markdown-escaped raw log of changes to the master branch, earliest commits
first, commit titles with prepended bullet and short commit hash.
HELPTEXT
    echo
    printf 'Usage: %q %s\n' "$(basename "$1")" '[-?|-h|--help]'
}
case "$1" in
    --help|-h|-\?)	shift; printUsage "$0"; exit 0;;
esac
if [ $# -ne 0 ]; then
    printUsage "$0" >&2
    exit 2
fi

git bomlog --pretty=format:"* %h %B" --reverse \
    | markdownEscape \
    | sed -e "s#^\\\\\\(\\* [[:xdigit:]]\\+ \\)#\\1#"
