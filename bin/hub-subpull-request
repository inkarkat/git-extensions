#!/bin/bash
shopt -qs extglob

printUsage()
{
    cat <<HELPTEXT
Open a pull request for the current submodule / for all submodules that are on
the same branch as the superproject.
HELPTEXT
    echo
    printf 'Usage: %q %s\n' "$(basename "$1")" '[-?|-h|--help]'
}
case "$1" in
    --help|-h|-\?)	shift; printUsage "$0"; exit 0;;
esac

if git issubmodule; then
    message="$(withSeparator \
	--command 'git superdo --no-header boml | markdownEscape' \
	--command 'git boml | markdownEscape' \
	--command 'git-servername --message' \
	--command 'git bomlog --pretty=format:%B | markdownEscape' \
    )" || exit $?

    hub-wrapper pull-request --message "$message" --edit
else
    message="$(withSeparator \
	--command 'git boml | markdownEscape' \
	--command 'git-servername --message' \
	--command 'git bomlog --pretty=format:%B | markdownEscape' \
    )" || exit $?

    hub subsamebrdo --no-git-color --interactive pull-request --message "$message" --edit
fi
