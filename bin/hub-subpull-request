#!/bin/bash
shopt -qs extglob

readonly scriptName="$(basename -- "${BASH_SOURCE[0]}")"

printUsage()
{
    cat <<HELPTEXT
Open a pull request for the current submodule / for all submodules that are on
the same branch as the superproject.
HELPTEXT
    echo
    printf 'Usage: %q %s\n' "$(basename "$1")" '[-?|-h|--help]'
}
superMessage=
case "$1" in
    --help|-h|-\?)	shift; printUsage "$0"; exit 0;;
    --super-message)	shift; superMessage="${1:?}"; shift;;
    --existing-changes)
			shift
			currentSubmodule="${1?}"; shift
			readarray -t submodules < <(git subsamebrdo --subdo-command-name "${scriptName#hub-}" --no-header)
			[ ${#submodules[@]} -eq 0 ] && exit 0
			hub-bomsubchanges --no-color --qualified-with-userrepo --as markdown ${currentSubmodule:+--exclude-submodule "$currentSubmodule"} "${submodules[@]}"
			exit 0
			;;
esac

if [ -n "$superMessage" ] || git issubmodule; then
    [ -n "$superMessage" ] || superMessage="$(git superdo --no-header bomlo | markdownEscape)" || exit $?

    # Do this for each submodule, even if invoked in the superproject, as each
    # submodule iteration adds a pull request.
    currentSubmodule="$(git-supersubpath)" || exit $?
    existingChanges="$(git superdo --no-header subpull-request --existing-changes "$currentSubmodule")"
    typeset -a existingChangesCommand=()
    if [ -n "$existingChanges" ]; then
	printf -v echoExistingChanges 'printf %%s\\\\n%%s\\\\n %q %q' 'Related changes:' "$existingChanges"
	existingChangesCommand=(--command "$echoExistingChanges")
    fi

    message="$(withSeparator \
	--command 'git boml | markdownEscape' \
	"${existingChangesCommand[@]}" \
	--command 'git-servername --message' \
	--command 'hub-bomlogForPullRequest' \
    )" || exit $?

    exec hub-wrapper pull-request --message "${superMessage}${superMessage:+$'\n\n'}$message" --edit
else
    superMessage="$(git bomlo | markdownEscape)" || exit $?
    exec hub-wrapper subsamebrdo --subdo-command-name "${scriptName#hub-}" --no-git-color --interactive subpull-request --super-message "$superMessage"
fi
