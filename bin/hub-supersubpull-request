#!/bin/bash
shopt -qs extglob

printUsage()
{
    cat <<HELPTEXT
Open pull requests for the superproject and the current submodule / for all
submodules that are on the same branch as the superproject.
HELPTEXT
    echo
    printf 'Usage: %q %s\n' "$(basename "$1")" '[-?|-h|--help]'
}
case "$1" in
    --help|-h|-\?)	shift; printUsage "$0"; exit 0;;
esac

if git issubmodule; then
    superprojectRoot="$(git superproject)" || exit 3
    submoduleRoot="$PWD"
    cd "$superprojectRoot" || exit 3
    header "../$(git-wcname)"

    handleSubmodules()
    {
	cd "$submoduleRoot" || exit 3
	header "$(git-wcname)"
	message="$(withSeparator \
	    --command hub-superpr \
	    --command 'git bomlog --pretty=format:%B' \
		| markdownEscape
	)" || exit $?

	hub-wrapper pull-request --message "$message" --edit
    }
else
    handleSubmodules()
    {
	message="$(hub-prtitle --as-integration-message --qualified-with-userrepo | markdownEscape)" || return $?
	hub-subsamebrdo --no-git-color --interactive --command "logs=\"\$(git bomlog --pretty=format:%B)\"; hub-wrapper pull-request --message \"\$message\"\$'\\n'\"\$logs\" --edit"
    }
fi

message="$(withSeparator \
    --command 'git-servername --message' \
    --command 'git bomlog --pretty=format:%B | markdownEscape' \
)" || exit $?
hub-wrapper pull-request --draft --message "$message" --edit || exit $?

handleSubmodules || exit $?

exec tempedit \
    --sink-exec gh pr edit --body-file {} \; \
    -- pipelineBuilder --reverse --command markdownEscape \
	-- withSeparator \
	    --command 'hub pr list -f "%b"' \
	    --command 'git boml' \
	    --command hub-bomsubchanges \

